FREERTOS_KERNEL_ROOT_DIR            :=  ../FreeRTOS/FreeRTOS
FREERTOS_KERNEL_SOURCE_DIR          :=  ${FREERTOS_KERNEL_ROOT_DIR}/Source
FREERTOS_KERNEL_PORTABLE_DIR        :=  ${FREERTOS_KERNEL_SOURCE_DIR}/portable
FREERTOS_KERNEL_INCLUDE_DIR         :=  ${FREERTOS_KERNEL_SOURCE_DIR}/include

FREERTOS_KERNEL_PORTABLE_DIR_SPEC   :=  ${FREERTOS_KERNEL_PORTABLE_DIR}/GCC/RISC-V

FREERTOS_CONFIG_DIR					:= ../FreeRTOS/FreeRTOS/Demo/CORTEX_MPU_M3_MPS2_QEMU_GCC/

SRC     +=  ${FREERTOS_KERNEL_SOURCE_DIR}/tasks.c
SRC     +=  ${FREERTOS_KERNEL_SOURCE_DIR}/list.c
SRC     +=  ${FREERTOS_KERNEL_SOURCE_DIR}/queue.c
SRC     +=  ${FREERTOS_KERNEL_SOURCE_DIR}/timers.c
SRC     +=  ${FREERTOS_KERNEL_SOURCE_DIR}/event_groups.c

CC      	:=  arm-none-eabi-gcc

CFLAGS		+=	-mthumb -mcpu=cortex-m3

INCLUDE_DIR  +=   -I${FREERTOS_KERNEL_INCLUDE_DIR}
INCLUDE_DIR  +=   -I${FREERTOS_CONFIG_DIR}
INCLUDE_DIR  +=   -I/usr/include/
INCLUDE_DIR  +=   -I../FreeRTOS/FreeRTOS/Source/portable/GCC/ARM_CM3

hoge:
	arm-none-eabi-gcc ${CFLAGS} ${INCLUDE_DIR} -c  ${FREERTOS_KERNEL_SOURCE_DIR}/tasks.c
